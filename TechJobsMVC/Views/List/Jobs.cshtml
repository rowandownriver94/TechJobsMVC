
<div class="container body-content">

    <h1>@ViewBag.title</h1>

    @{ //TODO #1: Use a loop to display job results in a table.

            @foreach (var jobListing in ViewBag.jobs)
            {
                <br>
                <table class="job-listing">

                    
                    <tr> 
                        <th>
                            ID:
                        </th>
                        <td>
                            @jobListing.Id
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Name:
                        </th>
                        <td>
                            @jobListing.Name
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Employer:
                        </th>
                        <td>
                            @jobListing.Employer
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Location: 
                        </th>
                        <td>
                            @jobListing.Location
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Position Type: 
                        </th>
                        <td>
                            @jobListing.PositionType
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Skill: 
                        </th>
                        <td>
                            @jobListing.CoreCompetency
                        </td>
                    </tr>

                </table>

                }

            }
</div>