<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == 'all'" />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    @{
        //TODO #4: Loop over the search results to display all job fields.

        if (ViewBag.jobResults != null)
        {
            <h3>ViewBag.title</h3>

            foreach (var jobResult in ViewBag.jobResults)
            {
                <br>
                <table class="job-listing">


                    <tr>
                        <th>
                            ID:
                        </th>
                        <td>
                            @jobResult.Id
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Name:
                        </th>
                        <td>
                            @jobResult.Name
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Employer:
                        </th>
                        <td>
                            @jobResult.Employer
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Location:
                        </th>
                        <td>
                            @jobResult.Location
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Position Type:
                        </th>
                        <td>
                            @jobResult.PositionType
                        </td>
                    </tr>
                    <tr>
                        <th>
                            Skill:
                        </th>
                        <td>
                            @jobResult.CoreCompetency
                        </td>
                    </tr>

                </table>
            }
        }

    }

</div>